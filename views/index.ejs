<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shrinker</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
      body {
        padding: 2rem;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: var(--bs-body-bg);
        color: var(--bs-body-color);
        transition: background-color 0.3s, color 0.3s;
      }

      h1 {
        font-weight: bold;
        margin-bottom: 1.5rem;
        text-align: center;
      }

      form {
        max-width: 600px;
        margin: auto;
        margin-bottom: 2rem;
        display: flex;
        gap: 10px;
        align-items: center;
      }

      input[type="text"] {
        flex-grow: 1;
      }

      table {
        width: 100%;
        margin-top: 2rem;
        border-collapse: collapse;
      }

      th,
      td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid var(--bs-border-color-translucent);
      }

      th {
        background-color: var(--bs-tertiary-bg);
      }

      .theme-toggle {
        position: absolute;
        top: 1rem;
        right: 1rem;
        cursor: pointer;
        font-size: 1.5rem;
        color: var(--bs-body-color);
      }

      a {
        text-decoration: none;
        color: var(--bs-link-color);
      }

      a:hover {
        text-decoration: underline;
      }

      .table-container {
        max-width: 800px;
        margin: auto;
      }
    </style>
  </head>
  <body>
    <!-- Theme Toggle -->
    <div class="theme-toggle" id="themeToggle" title="Toggle theme">
      <i class="bi bi-moon-fill" id="themeIcon"></i>
    </div>

    <h1>ðŸ”— URL Shrinker</h1>

    <form action="/shorturl" method="POST">
      <label for="url" class="form-label visually-hidden">Enter URL to shrink:</label>
      <input type="text" id="url" name="url" class="form-control" placeholder="Enter long URL..." required />
      <button type="submit" class="btn btn-primary">Shrink</button>
    </form>

    <div class="table-container">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Original URL</th>
            <th>Shrunk URL</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% if (shortUrls && shortUrls.length > 0) { %>
            <% shortUrls.forEach(shortUrl => { %>
              <tr>
                <td><a href="<%= shortUrl.full %>" target="_blank"><%= shortUrl.full %></a></td>
                <td><a href="<%= shortUrl.short %>" target="_blank"><%= shortUrl.short %></a></td>
                <td><%= shortUrl.clicks %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="3" class="text-center">No URLs shortened yet.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Theme Toggle Script -->
    <script>
      const htmlElement = document.documentElement;
      const themeToggle = document.getElementById("themeToggle");
      const themeIcon = document.getElementById("themeIcon");

      themeToggle.addEventListener("click", () => {
        const currentTheme = htmlElement.getAttribute("data-bs-theme");
        const newTheme = currentTheme === "dark" ? "light" : "dark";
        htmlElement.setAttribute("data-bs-theme", newTheme);
        themeIcon.className = newTheme === "dark" ? "bi bi-sun-fill" : "bi bi-moon-fill";
      });
    </script>
  </body>
</html>
